<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formfrg">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:background="@drawable/corner_bg"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keyword*"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginBottom="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the keyword"
            android:textColorHint="@color/b_gray"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/text_border"
            android:layout_marginBottom="10dp"
            android:completionThreshold="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance(Miles)*"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/text_border"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category*"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/my_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

        <!--        location-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Location*"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-Detect"
                android:textSize="15dp"
                android:textColor="@color/b_gray"
                android:layout_marginBottom="10dp"/>

            <Switch
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the keyword"
            android:textColorHint="@color/b_gray"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/text_border"
            android:layout_marginBottom="10dp"/>

        <!--        button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Search"
                android:background="@drawable/btn1_bg"
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:background="@drawable/btn2_bg"
                android:textColor="@color/white"
                android:textSize="20dp"/>



        </LinearLayout>
    </LinearLayout>

</FrameLayout>